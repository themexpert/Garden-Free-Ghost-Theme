<div id="tx-mainbody" role="main">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                {{#post}}
                <div class="tx-block">
                    <article id="tx-single-post">
                        <div class="tx-post-content">
                            {{content}}
                        </div>
                        
                        <div class="tx-author">
                            <div class="row">
                                <div class="col-md-8">
                                    <h3 class="tx-author-heading">About Author</h3>

                                    <div class="media">
                                        <div class="pull-left tx-author-image thumbnail">
                                            <img class="media-object" src="{{author.image}}" alt="{{author.name}}">
                                        </div>
                                        <div class="media-body">
                                            <h4 class="media-heading">{{author.name}}</h4>
                                            <p>{{author.bio}}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="tx-post-share">
                                        <h3 class="tx-post-share-title">Share this post</h3>
                                        <a class="tx-post-share-icon" href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
                                            onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                            <i class="fa fa-twitter-square"></i>
                                        </a>
                                        <a class="tx-post-share-icon" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                                            onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                                            <i class="fa fa-facebook-square"></i>
                                        </a>
                                        <a class="tx-post-share-icon" href="https://plus.google.com/share?url={{url absolute="true"}}"
                                           onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                                            <i class="fa fa-google-plus-square"></i>
                                        </a>
                                    </div>
                                </div>
                                    
                            </div>
                        </div>
                    </article>
                </div>
                {{/post}}
                
            </div>
        </div>
    </div>
</div>