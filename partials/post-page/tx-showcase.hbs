{{> widgets/tx-post-header }}

<div id="tx-top-header">
	<div class="container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
	            {{#post}}
	                <header class="{{post_class}}">
	                    <h1 class="tx-post-title">{{{title}}}</h1>
	                    
	                    <div class="tx-post-meta">
	                        <span class="tx-post-author"><i class="fa fa-user"></i> {{author}}</span>
	                        <time class="tx-post-time" datetime="{{date format='YYYY-MM-DD'}}"><i class="fa fa-calendar"></i> {{date format="DD MMM YYYY"}}</time>
	                        <span class="tx-post-tags">{{#if tags}}<i class="fa fa-tags"></i>{{/if}} {{tags}}</span>
	                    </div>
		            </header>
	            {{/post}}
			</div>
		</div>
	</div>
</div>
	
	